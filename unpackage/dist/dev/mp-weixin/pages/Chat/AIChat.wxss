.chat-container.data-v-47ed532f {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f8f8;
}
.content-box.data-v-47ed532f {
  flex: 1;
  padding: 20rpx;
  overflow-y: auto;
  margin: 0 auto;
  width: 100%;
  box-sizing: border-box;
}
.chat-textarea.data-v-47ed532f {
  width: 100%;
  height: 200rpx;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 8rpx;
  border: 1px solid #eee;
  background-color: #fff;
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.action-bar.data-v-47ed532f {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.activity-selector.data-v-47ed532f {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-radius: 8rpx;
  border: 1px solid #eee;
}
.send-button.data-v-47ed532f {
  background-color: #42b983;
  color: #fff;
  border-radius: 8rpx;
  padding: 16rpx 40rpx;
  font-size: 28rpx;
  line-height: 1.5;
  margin: 0;
}
.error.data-v-47ed532f {
  color: #ff4444;
  margin: 20rpx 0;
  font-size: 28rpx;
}
.response-container.data-v-47ed532f {
  max-width: 100%;
  margin: 30rpx 0;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

/* 弹窗样式 */
.popup-content.data-v-47ed532f {
  background-color: #fff;
  border-radius: 16rpx 16rpx 0 0;
  padding-bottom: env(safe-area-inset-bottom);
  max-height: 80vh;
}
.popup-header.data-v-47ed532f {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.popup-title.data-v-47ed532f {
  font-size: 32rpx;
  font-weight: bold;
}
.activity-list.data-v-47ed532f {
  max-height: 600rpx;
}
.activity-item.data-v-47ed532f {
  padding: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}
.activity-item.data-v-47ed532f:active {
  background-color: #f0f0f0;
}

