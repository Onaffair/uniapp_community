
.login-hint {
    padding: 40rpx;
    text-align: center;
    font-size: 32rpx;
    color: #666;
}
.tabs {
    display: flex;
    border-bottom: 1px solid #eee;
}
.tab-item {
    flex: 1;
    text-align: center;
    padding: 24rpx 0;
    font-size: 28rpx;
    color: #666;
    position: relative;
}
.tab-item.active {
    color: #007bff;
}
.tab-item.active::after {
    content: '';
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 40%;
    height: 4rpx;
    background-color: #007bff;
    transform: translateX(-50%);
}
.activity-list {
    height: calc(100vh - 180rpx);
}
.activity-item {
    display: flex;
    flex-direction: column;
    padding: 30rpx;
    border-bottom: 1px solid #eee;
    background-color: #fff;
    position: relative;
}
.activity-title {
    font-size: 32rpx;
    font-weight: bold;
    margin-bottom: 10rpx;
}
.activity-desc {
    font-size: 28rpx;
    color: #666;
}
.activity-arrow {
    position: absolute;
    right: 30rpx;
    top: 50%;
    transform: translateY(-50%);
    color: #ccc;
    font-weight: bold;
}
.empty-hint,
.loading-hint,
.end-hint {
    text-align: center;
    padding: 30rpx;
    color: #999;
    font-size: 26rpx;
}
.floating-button {
    position: fixed;
    bottom: 160rpx;
    right: 40rpx;
    width: 120rpx;
    height: 120rpx;
    background-color: #ff5722;
    color: white;
    font-size: 64rpx;
    font-weight: bold;
    text-align: center;
    line-height: 120rpx;
    border-radius: 50%;
    box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.3);
    z-index: 999;
}
